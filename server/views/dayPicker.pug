mixin dayPicker(month=(new Date().getMonth())+1)
    div.day-picker#calendar(month=month style="visibility: hidden;")
        div.this-month
            div.month-title
                p.title 2020년 #{month}월
            div.month(month=month)
                div.attribute.week
                    span 일
                    span 월
                    span 화
                    span 수
                    span 목
                    span 금
                    span 토
        div.next-month
            div.month-title
                p.title 2020년 #{month+1}월
            div.month(month=(month+1))
                div.attribute.week
                    span 일
                    span 월
                    span 화
                    span 수
                    span 목
                    span 금
                    span 토
