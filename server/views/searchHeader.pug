mixin header(location, checkin, checkout, guest)
    div.search-nav
        div.nav-inner
            .left.item
                img(src="/static/find.svg", alt="search-icon")
                span=location
            .center.item
                - if(checkin && checkout)
                    span #{checkin} - #{checkout}
                - else
                    span 날짜 입력
            .right.item
                if guest
                    span 게스트 #{guest}명
                else
                    span 게스트 입력